{
    "name": "unified-latex",
    "description": "Tools to parse LaTeX source files with the unifiedjs framework",
    "version": "1.1.3",
    "private": true,
    "author": {
        "name": "Jason Siefken",
        "email": "siefkenj@gmail.com"
    },
    "keywords": [
        "pegjs",
        "latex",
        "parser"
    ],
    "type": "module",
    "scripts": {
        "test": "jest",
        "watch": "webpack --watch",
        "build": "mkdirp dist && cp README.md dist/ && node scripts/make-package.mjs && webpack"
    },
    "dependencies": {
        "@babel/plugin-transform-modules-commonjs": "^7.17.9",
        "@types/color": "^3.0.3",
        "@types/cssesc": "^3.0.0",
        "@types/prettier": "^2.6.0",
        "@types/trie-prefix-tree": "^1.5.0",
        "color": "^4.2.3",
        "cssesc": "^3.0.0",
        "hast": "^1.0.0",
        "hast-util-to-html": "^8.0.3",
        "jest-esm-transformer": "^1.0.0",
        "prettier": "^2.6.2",
        "trie-prefix-tree": "^1.5.1",
        "unified": "^10.1.2",
        "unified-lint-rule": "^2.1.1",
        "unist-util-position": "^4.0.3"
    },
    "devDependencies": {
        "@babel/core": "^7.17.9",
        "@babel/preset-env": "7.16.11",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.24",
        "babel-jest": "^27.5.1",
        "babel-loader": "8.2.4",
        "esbuild": "^0.14.39",
        "esbuild-runner": "^2.2.1",
        "eslint": "^8.13.0",
        "esr": "^0.10.0",
        "jest": "27.5.1",
        "mkdirp": "1.0.4",
        "pegjs": "0.10.0",
        "pegjs-loader": "^0.5.6",
        "prettier-plugin-pegjs": "^0.5.0",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.8",
        "ts-node": "^10.7.0",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3",
        "typescript-json-schema": "^0.53.0",
        "webpack": "5.72.0",
        "webpack-cli": "^4.9.2"
    },
    "jest": {
        "transformIgnorePatterns": [
            "node_modules/(?!unified|bail|is-plain-obj|trough|vfile.*|unist.*|hast.*|property-information|html-void-elements|.*-separated-tokens|.*entities.*|ccount|rehype*|string-width|strip-ansi|ansi-regex|supports-color)"
        ],
        "transform": {
            "\\.m?jsx?$": "jest-esm-transformer",
            "latex.pegjs$": "<rootDir>/../../tests/pegjs-preprocessor-latex.js",
            "\\.pegjs$": "<rootDir>/../../tests/pegjs-preprocessor.js",
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/siefkenj/latex-parser.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/siefkenj/latex-parser/issues"
    },
    "homepage": "https://github.com/siefkenj/latex-parser#readme",
    "engines": {
        "node": ">= 12.0"
    }
}
